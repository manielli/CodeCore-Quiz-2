    <div>
        <%= form_with(model: @idea, local: true) do |form| %>
            
            <% if @idea.errors.present? %>
                <p class="form-errors">
                    <%= @idea.errors.full_messages.join(", ") %>    
                </p>
            <% end %>
            <div class="mt-2">
                <%= form.label :title %> <br>
                <%= form.text_area :title, cols: 50, rows: 2 %>
            </div>

            <div>
                <%= form.label :description %> <br>
                <%= form.text_area :description, cols: 50, rows: 10 %>
            </div>
                <%= form.submit "Submit Idea"%>
        <% end %>
    </div>
