<ul class="idea-list m-2">
    <div class="card">
        <% @ideas.each do |idea| %>
            <div class="card m-2">
                <h5 class="card-title m-2" >
                    <%= link_to(idea.title, idea_path(idea.id)) %>
                </h5>
                <p class="card-text text-dark m-2">
                    <%= idea.description %>
                </p>
                <small class="card-text text-dark m-2" >By <%= idea.user.full_name %></small>
                <small class="card-text text-dark m-2" >Created <%= time_ago_in_words(idea.created_at) %> ago </small>
            </div>
        <% end %>
    </div>
</ul>