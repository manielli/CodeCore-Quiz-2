<!DOCTYPE html>
<html>
  <head>
    <title>IdeaFactory</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-light bg-light">
        <a href="#" class="navbar-brand"><%= link_to("Factory Idea", root_path) %></a>
      
        <div>
          <ul class="navbar-nav mr-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <a href="" class="nav-link"><%= link_to("New Idea", new_idea_path) %></a>
              </li>
            <% end %>
            <% if user_signed_in? %>
              <small>Hello <%= current_user.first_name %></small>
              <li class="nav-item">
                <%= link_to("Logout", session_path, method: :delete, data: { confirm: "Are you sure you want to log out?"}) %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to("Sign In", new_session_path) %>
              </li>
              <li class="nav-item">
                <%= link_to("Sign Up", new_user_path) %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>

    <main class="container-fluid">
        <% flash.each do |type, message| %>
          <div class="alert alert-<%= type %>%" >
            <%= message %>
          </div>
        <% end %>
        <%= yield %>
    </main>
  </body>
</html>
